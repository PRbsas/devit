<section id="list">
  <h2><%= @community.title %></h2>
  <% if  current_user.username %>
    <h5>Created by <%= current_user.username %></h5>
  <% else %>
    <h5>Created by <%= current_user.email %></h5>
  <% end %>
  <p class="description"><%= @community.short_description %></p>
  <h5><%= pluralize(@community.posts.size, 'post') %></h5>
</section>

<section id="list-posts">
  <ul>
    <% @community.posts.each do |post| %>
      <%= link_to community_post_path(@community, post) do %>
        <li>
          <h2><%= post.title %></h2>
          <p>submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.username %></p>
        </li>
      <% end %>
    <% end %>
    <%= link_to new_community_post_path(@community) do %>
      <div class="add-link">
        <p ><%= image_tag("plus") %>  Post</p>
      </div>
    <% end %>
  </ul>
</section>
