<section id="list">
  <h2><%= @community.title %></h2>
  <% if  current_user.username %>
    <h5>Created by <%= current_user.username %></h5>
  <% else %>
    <h5>Created by <%= current_user.email %></h5>
  <% end %>
  <p><%= @community.short_description %></p>
  <h5><%= @community.posts.size %> posts.</h5>
</section>

<section id="list-posts">
  <ul>
    <% @community.posts.each do |post| %>
      <%= link_to community_post_path(post) do %>
        <li>
          <h2><%= post.title %></h2>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>
